{{!
    @template mod_forum/forum_discussion_post

    Template to render a single post from a discussion.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
{{< mod_forum/forum_discussion_post_new_first_post }}
    {{$authorname}}
        <h4 class="h6 font-weight-bold d-inline-block mb-0">{{author.fullname}}</h4>
    {{/authorname}}
    {{$subject}}{{/subject}}
    {{$footer}}
        <div class="d-flex mt-2">
            {{#capabilities.reply}}
                <a
                    href="{{{urls.reply}}}"
                    class="d-inline-block small dimmed_text"
                    data-post-id="{{id}}"
                    data-action="collapsible-link"
                    title="{{#str}} reply, mod_forum {{/str}}"
                    role="button"
                >
                    {{#str}} reply, mod_forum {{/str}}
                </a>
            {{/capabilities.reply}}
        </div>
    {{/footer}}
    {{$replies}}
        {{#hasreplies}}
            {{#replies}}
                {{> mod_forum/forum_discussion_post_new_reply }}
            {{/replies}}
        {{/hasreplies}}
    {{/replies}}
{{/ mod_forum/forum_discussion_post_new_first_post }}
