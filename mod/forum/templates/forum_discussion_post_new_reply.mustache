{{!
    @template mod_forum/forum_discussion_post

    Template to render a single post from a discussion.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
{{< mod_forum/forum_discussion_post_new_first_post }}
    {{$postclasses}}mt-4{{/postclasses}}
    {{$authorname}}
        <h4 class="h6 font-weight-bold d-inline-block mb-0" data-region="author-name">{{author.fullname}}</h4>
    {{/authorname}}
    {{$footer}}
        <div class="d-flex mt-2">
            {{#capabilities.reply}}
                <a
                    href="{{{urls.reply}}}"
                    class="d-inline-block small dimmed_text font-weight-bold"
                    data-post-id="{{id}}"
                    data-action="collapsible-link"
                    data-can-reply-privately="{{canreplyprivately}}"
                    title="{{#str}} reply, mod_forum {{/str}}"
                    role="button"
                >
                    {{#str}} reply, mod_forum {{/str}}
                </a>
            {{/capabilities.reply}}
        </div>
    {{/footer}}
    {{$replies}}
        <div class="hidden image-spacer mt-4" data-region="reply-visibility-toggle-container">
            <button class="btn btn-link pl-0" data-action="show-replies">Show previous replies</button>
            <button class="btn btn-link hidden pl-0" data-action="hide-replies">Hide previous replies</button>
        </div>
        <div class="image-spacer replies-container mt-4" data-region="replies-container">
            {{#hasreplies}}
                {{#replies}}
                    {{> mod_forum/forum_discussion_post_new_reply }}
                {{/replies}}
            {{/hasreplies}}
        </div>
        <div class="image-spacer inline-reply-container" data-region="inpage-reply-container"></div>
    {{/replies}}
{{/ mod_forum/forum_discussion_post_new_first_post }}
