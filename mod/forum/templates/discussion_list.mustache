{{!
    @template mod_forum/discussion_list

    Template to display the list of forum discussions.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * TODO

    Example context (json):
    {
    }
}}
<span id="{{uniqid}}">
    {{#notifications}}
        {{> core/notification}}
    {{/notifications}}

    {{#capabilities.create}}
        <div class="forumaddnew">
            <a href="{{urls.create}}" class="btn btn-primary">
                {{$discussion_create_text}}
                    {{#str}}addanewdiscussion, forum{{/str}}
                {{/discussion_create_text}}
            </a>
        </div>
    {{/capabilities.create}}

    {{#discussions.0}}
        <table class="table table-hover table-striped">
            {{$discussion_list_header}}
            <thead>
                <tr>
                    <th scope="col">&nbsp;</th>
                    <th scope="col" class="p-l-0">{{#str}}discussion, mod_forum{{/str}}</th>
                    <th scope="col" class="author">{{#str}}startedby, mod_forum{{/str}}</th>
                    {{#has_any_group}}
                        <th scope="col" class="group">{{#str}}group{{/str}}</th>
                    {{/has_any_group}}
                    {{#can_see_discussions}}
                        <th scope="col" class="text-center">{{#str}}replies, mod_forum{{/str}}</th>
                        {{#can_track_reads}}
                            <th scope="col" class="text-center">{{#str}}unread, mod_forum{{/str}}</th>
                        {{/can_track_reads}}
                    {{/can_see_discussions}}
                    <th scope="col" class="lastpost">{{#str}}lastpost, mod_forum{{/str}}</th>
                    {{#capabilities.subscribe}}
                        <th scope="col" class="discussionsubscription"></th>
                    {{/capabilities.subscribe}}
                </tr>
            </thead>
            {{/discussion_list_header}}
            {{$discussion_list_body}}
            <tbody>
                {{#discussions}}
                    {{#discussion}}
                    <tr>
                        <td scope="col" class="pinned p-0 text-center align-middle">
                            {{#discussion.pinned}}
                                {{#pix}}i/pinned, mod_forum, {{#str}}discussionpinned, mod_forum{{/str}}{{/pix}}
                            {{/discussion.pinned}}
                        </td>
                        <td scope="col" class="topic p-0">
                            <a class="p-3 p-l-0 w-100 h-100 d-block" href="{{discussion.urls.view}}">{{discussion.name}}</a>
                        </td>
                        <td scope="col" class="author">
                            {{#firstpostauthor}}
                                <a href="{{urls.profile}}">
                                    <div class="d-flex flex-row">
                                        <div class="align-middle p-0">
                                            <a href="{{urls.profile}}">
                                                <img {{!
                                                    }} class="h-auto rounded-circle userpicture" {{!
                                                    }} src="{{urls.profileimage}}" {{!
                                                    }} alt="{{#str}}pictureof, moodle, {{fullname}}{{/str}}" {{!
                                                    }}>
                                            </a>
                                        </div>
                                        <div class="align-middle p-2">
                                            <a href="{{urls.profile}}">{{fullname}}</a>
                                        </div>
                                    </div>
                                </a>
                            {{/firstpostauthor}}
                        </td>
                        {{#has_any_group}}
                            {{> mod_forum/discussion_list_entry_group}}
                        {{/has_any_group}}
                        {{#can_see_discussions}}
                            <td scope="col" class="p-0 text-center">
                                <a href="{{url}}" class="p-3 w-100 h-100 d-block">
                                    {{replies}}
                                </a>
                            </td>
                            {{#can_track_reads}}
                                <td scope="col" class=p-0 "text-center">
                                    {{#unread}}
                                        {{! TODO Rewrite as AJAX}}
                                        <a href="" class="p-3 w-100 h-100 d-block">{{unread}} {{#pix}}t/markasread, core, {{#str}}markallread, mod_forum{{/str}}{{/pix}}</a>
                                    {{/unread}}
                                    {{^unread}}
                                        <span class="p-3 w-100 h-100 d-block">
                                            0
                                        </span>
                                    {{/unread}}
                                </td>
                            {{/can_track_reads}}
                        {{/can_see_discussions}}
                        <td scope="col" class="text-left">
                            {{#latestpostauthor}}
                                <div class="d-flex flex-row">
                                    <div class="align-middle p-0">
                                        <a href="{{urls.profile}}">
                                            <img {{!
                                                }} class="h-auto rounded-circle userpicture" {{!
                                                }} src="{{urls.profileimage}}" {{!
                                                }} alt="{{#str}}pictureof, moodle, {{fullname}}{{/str}}" {{!
                                                }}>
                                        </a>
                                    </div>
                                    <div class="p-2 p-t-0 p-b-0 d-inline-flex flex-column">
                                        <div>
                                            <a href="{{urls.profile}}">{{fullname}}</a>
                                        </div>
                                        <div>
                                            <a href="{{url}}">{{#userdate}}
                                                {{discussion.times.modified}}, {{#str}}strftimerecentfull{{/str}}
                                            {{/userdate}}</a>
                                        </div>
                                    </div>
                                </div>
                            {{/latestpostauthor}}
                        </td>
                        <td scope="col" class="p-0 align-middle">
                            {{> mod_forum/discussion_subscription_toggle}}
                        </td>
                    </tr>
                    {{/discussion}}
                {{/discussions}}
            </tbody>
            {{/discussion_list_body}}
        </table>
        {{#pageno}}
            <a href="{{{prev_page_link}}}">Previous</a>
        {{/pageno}}
        {{#more_pages}}
            <a href="{{{next_page_link}}}">Next</a>
        {{/more_pages}}
        {{#can_create_discussion}}
            <div class="forumaddnew">
                <a href="{{create_discussion_link}}" class="btn btn-primary">{{create_discussion_link_text}}</a>
            </div>
        {{/can_create_discussion}}
    {{/discussions.0}}
    {{^discussions.0}}
        <div class="forumnodiscuss">
            {{nodiscussionstring}}
        </div>
    {{/discussions.0}}

</span>
{{#js}}
    require(['mod_forum/discussion_list'], function(View) {
        View.init("{{uniqid}}");
    });
{{/js}}
