{{!
    @template mod_forum/inpage_reply_new

    Template which defines a forum post for sending in a single-post HTML email.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "postid": 0,
        "reply_url": "",
        "sesskey": "",
        "parentsubject": ""
    }
}}
<div class="mt-4" data-content="inpage-reply-content" style="display: none;">
    <div class="d-flex">
        <div class="author-image-container">
            <img
                class="rounded-circle w-100"
                src="{{{loggedinuser.profileimageurl}}}"
                alt="{{#str}} pictureof, core, {{loggedinuser.fullname}} {{/str}}"
                aria-hidden="true"
            >
        </div>
        <div class="w-100">
            <h4 class="h5 font-weight-bold reply-author">{{loggedinuser.firstname}} (you)</h4>
            <form data-post-id="{{postid}}" data-content="inpage-reply-form" action="{{{reply_url}}}">
                <textarea
                    name="post"
                    rows="3"
                    class="w-100"
                    data-auto-rows
                    data-min-rows="3"
                    data-max-rows="10"
                ></textarea>
                <input type="hidden" name="postformat" value="{{postformat}}"/>
                <input type="hidden" name="subject" value="{{#str}} inpagereplysubject, forum, {{parentsubject}} {{/str}}"/>
                <input type="hidden" name="reply" value="{{postid}}"/>
                <input type="hidden" name="sesskey" value="{{sesskey}}"/>
                <div class="d-flex">
                    <button class="btn btn-primary" data-action="forum-inpage-submit">
                        <span data-region="submit-text">Post</span>
                        <span data-region="loading-icon-container" class="hidden">{{> core/loading }}</span>
                    </button>
                    <button data-action="forum-advanced-reply" class="btn btn-link mr-auto" type="submit">
                        {{#str}} advanced, core {{/str}}
                    </button>
                    {{#canreplyprivately}}
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" name="privatereply" type="checkbox" id="private-reply-checkbox-{{uniqid}}">
                        <label class="form-check-label" for="private-reply-checkbox-{{uniqid}}">
                            <span class="unchecked dimmed_text">Reply privately</span>
                            <span class="checked text-danger">Replying privately</span>
                        </label>
                    </div>
                    {{/canreplyprivately}}
                    <button
                        class="btn btn-link icon-no-margin icon-size-4 dimmed_text"
                        data-action="collapsible-link"
                    >
                        {{#pix}} i/delete, core {{/pix}}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
