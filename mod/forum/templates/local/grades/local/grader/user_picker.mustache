<div class="col-md-12">
    <div class="row">
        <div class="col-md-8">
            <div data-region="user_picker/user"></div>
        </div>
        <div class="col-md-4">
            <ul class="pagination mb-0">
                <li class="mr-3">
                    <button class="btn btn-icon icon-size-4 icon-no-margin colour-inherit" href="#" aria-label="Previous" data-action="change-user" data-direction="-1">
                        <i aria-hidden="true" class="icon fa fa-angle-left fa-fw"></i>
                        <span class="sr-only">{{#str}} previous {{/str}}</span>
                    </button>
                </li>
                <li class="mr-3">
                    <button class="btn btn-icon icon-size-4 icon-no-margin colour-inherit" href="#" aria-label="Next" data-action="change-user" data-direction="1">
                        <i aria-hidden="true" class="icon fa fa-angle-right fa-fw"></i>
                        <span class="sr-only">{{#str}} next {{/str}}</span>
                    </button>
                </li>
                <li>
                    <button class="disabled btn btn-icon icon-size-4 icon-no-margin colour-inherit" href="#" aria-label="{{#str}} search {{/str}}" data-action="search-user">
                        <i class="icon fa fa-search fa-fw" aria-hidden="true"></i>
                        <span class="sr-only">{{#str}} search {{/str}}</span>
                    </button>
                </li>
            </ul>
        </div>
    </div>
    <hr class="mt-2">
</div>

