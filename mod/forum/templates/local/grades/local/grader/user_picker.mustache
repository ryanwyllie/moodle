<div class="d-flex align-items-center user-picker-container mb-2 p-2">
    <div class="d-flex align-items-center" data-region="user_picker/user"></div>
    <div class="ml-auto flex-shrink-0">
        <!-- TODO: add aria lable -->
        <nav aria-label="">
            <ul class="pagination mb-0">
