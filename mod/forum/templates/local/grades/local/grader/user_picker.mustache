<div class="col-md-12">
    <div class="row">
        <div class="col-md-8">
            <div data-region="user_picker/user"></div>
        </div>
        <div class="col-md-4">
            <ul class="pagination mb-0">
                <li class="mr-3">
                    <button class="btn btn-icon icon-size-4 icon-no-margin colour-inherit" href="#" aria-label="Previous" data-action="change-user" data-direction="-1">
                        <i aria-hidden="true" class="icon fa fa-angle-left fa-fw"></i>
                        <span class="sr-only">{{#str}} previous {{/str}}</span>
                    </button>
                </li>
                <li class="mr-3">
                    <button class="btn btn-icon icon-size-4 icon-no-margin colour-inherit" href="#" aria-label="Next" data-action="change-user" data-direction="1">
                        <i aria-hidden="true" class="icon fa fa-angle-right fa-fw"></i>
                        <span class="sr-only">{{#str}} next {{/str}}</span>
                    </button>
                </li>
                <li>
                    <button class="btn btn-icon icon-size-4 icon-no-margin colour-inherit" href="#" aria-label="{{#str}} search {{/str}}" data-target="#searchbox" aria-expanded="false" aria-controls="searchbox" data-toggle="collapse">
                        <i class="icon fa fa-search fa-fw" aria-hidden="true"></i>
                        <span class="sr-only">{{#str}} search {{/str}}</span>
                    </button>
                </li>
            </ul>
        </div>
        <div id="searchbox" class="col-md-12 collapse">
            <form action="" class="search-form w-100">
                <input type="text" data-action="search-user-input" class="form-control input-lg" placeholder="Search user">
            </form>
            <div data-action="search-user-box"></div>
        </div>
    </div>
    <hr class="mt-2">
</div>

<form action="#" class="d-flex w-100">
    <input id="wow" class="ml-auto sideways p-0 border-0" type="email" placeholder="Enter something" data-action="testing">
    <button data-action="testingbutton" type="button" class="fa fa-search pull-right"></button>
</form>
