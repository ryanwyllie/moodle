{{!
    @template mod_forum/forum_grader_discussion_posts

    Template to render a list of posts for a discussion.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
    }
}}
<div data-region="posts" id="post-region-{{uniqid}}" class="pt-4">
    {{#discussions}}
        <div class="discussion-container">
            <div class="px-4">
                <div class="d-flex align-items-center mb-4">
                    <h2 class="mb-0 font-weight-bold">{{name}}</h2>
                    <button
                        class="btn btn-link border ml-auto"
                        type="button"
                        data-action="view-context"
                        data-discussionid="{{id}}"
                        data-postid="{{id}}"
                        data-name="{{name}}"
                    >
                        {{#str}} viewconversation, forum {{/str}}
                    </button>
                </div>
                {{#posts}}
                    <div class="post-container">
                        {{> mod_forum/forum_discussion_nested_post }}
                        <hr class="w-75 mx-auto my-5">
                    </div>
                {{/posts}}
            </div>
            <hr class="my-5">
        </div>
    {{/discussions}}
    {{^discussions}}
        <h3>{{#str}} noposts, forum {{/str}}</h3>
    {{/discussions}}
</div>
{{#js}}
    require(['mod_forum/grades/expandconversation'], function(Conversation) {
        Conversation.registerEventListeners(document.querySelector('#post-region-{{uniqid}}'));
    });
{{/js}}
