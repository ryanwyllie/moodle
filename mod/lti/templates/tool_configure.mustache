{{!
    @template mod_lti/tool_configure

    This template provides the layout for the external tool configuration page in the
    LTI module.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    *

    Example context (json):
    {
    }

}}
<h2>{{#str}} manage_tool_proxies, mod_lti {{/str}}</h2>
<div class="fluid-container">
    <div id="registration-form-container">
        <h3>Add new external tool</h3>
        <form id="registration-form" class="form-horizontal">
            <div class="control-group">
                <label class="control-label" for="registration-url">URL</label>
                <div class="controls">
                    <input name="tool-url"
                        class="input-xxlarge"
                        type="url"
                        id="registration-url"
                        placeholder="URL for XML cartridge or tool registration page..."
                        required>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="tool-name">Name</label>
                <div class="controls">
                    <input name="tool-name" type="text" id="registration-name" disabled>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button id="registration-submit" class="btn btn-success">Add automatically</button>
                    or <a href="{{configuremanualurl}}">Add manually</a>
                </div>
            </div>
        </form>
    </div>

    <div>
        <h3>Configured tools</h3>
    </div>
</div>
{{#js}}
    require(['mod_lti/tool_configure'], function(toolConfigure) {
        toolConfigure.enhancePage();
    });
{{/js}}
