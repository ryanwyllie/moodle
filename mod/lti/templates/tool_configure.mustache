{{!
    @template mod_lti/tool_configure

    This template provides the layout for the external tool configuration page in the
    LTI module.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    *

    Example context (json):
    {
    }

}}
<h2>{{#str}} manage_tool_proxies, mod_lti {{/str}}</h2>
<div class="container-fluid">
    <div id="main-content-container">
        <div id="registration-form-container">
            <!--<h3>Add new external tool</h3>-->
            <div id="registration-choice-container" class="centered-menu">
                <div class="well">
                    <p class="lead">Automatically configure a new external tool using a</p>
                    <ul id="choice-list">
                        <li>
                            <!--<div class="btn-toolbar">-->
                                <button id="cartridge-url-button" class="btn btn-primary btn-large">Configuration URL</button>
                            <!--</div>-->
                        </li>
                        <li>
                            <p class="buffer-text lead">or</p>
                        </li>
                        <li>
                                <button id="registration-url-button" class="btn btn-primary btn-large">Registration URL</button>
                        </li>
                    </ul>
                    <p>alternatively you can <a href="{{configuremanualurl}}">configure a tool manually</a></p>
                </div>
            </div>
            <div id="registration-feedback-container" class="hidden"></div>
            <div id="cartridge-registration-container" class="hidden">
                {{> mod_lti/cartridge_registration_form }}
            </div>
            <div id="external-registration-container" class="hidden">
                {{> mod_lti/external_registration }}
            </div>
        </div>

        <div id="tool-list-container" class="loading">
            {{> mod_lti/tool_list }}
        </div>
    </div>
</div>
{{#js}}
    require(['mod_lti/tool_configure_controller'], function(controller) {
        controller.init();
    });
{{/js}}
