{{!
    @template mod_lti/tool_configure

    This template provides the layout for the external tool configuration page in the
    LTI module.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    *

    Example context (json):
    {
    }

}}
<h2>{{#str}} manage_tool_proxies, mod_lti {{/str}}</h2>
<div class="fluid-container">
    <div id="external-registration-container" class="hidden"></div>
    <div id="main-content-container">
        <div id="registration-form-container">
            <h3>Add new external tool</h3>
            <!--
            <form id="registration-form" class="form-inline">
                <input name="tool-url"
                    class="input-xxlarge"
                    type="url"
                    id="registration-url"
                    placeholder="URL for XML cartridge or tool registration page..."
                    required>
                <button id="registration-submit" type="button" class="btn btn-success">
                    <span class="btn-text">Add automatically</span>
                    <div class="btn-loader">
                        <div class="spinner">
                            <div class="bounce1"></div>
                            <div class="bounce2"></div>
                            <div class="bounce3"></div>
                        </div>
                    </div>
                </button>
                or <a href="{{configuremanualurl}}">Add manually</a>
            </form>
            -->
            <form id="registration-form" class="form-horizontal">
                <div class="control-group">
                    <label class="control-label" for="registration-url">URL</label>
                    <div class="controls">
                        <input name="tool-url"
                            class="input-xxlarge"
                            type="url"
                            id="registration-url"
                            placeholder="XML cartridge or tool registration page..."
                            required>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="registration-key">Consumer Key</label>
                    <div class="controls">
                        <input name="tool-key"
                            type="text"
                            id="registration-key">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="registration-secret">Shared Secret</label>
                    <div class="controls">
                        <input name="tool-secret"
                            type="text"
                            id="registration-secret">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button id="registration-submit" type="button" class="btn btn-success">
                            <span class="btn-text">Add automatically</span>
                            <div class="btn-loader">
                                <div class="spinner">
                                    <div class="bounce1"></div>
                                    <div class="bounce2"></div>
                                    <div class="bounce3"></div>
                                </div>
                            </div>
                        </button>
                        or <a href="{{configuremanualurl}}">Add manually</a>
                    </div>
                </div>
            </form>
        </div>

        <div id="tool-list-container">
            <h3>Tools</h3>
            <div id="tool-card-container" class="container-fluid">
                {{#tools}}
                    {{> mod_lti/tool_card }}
                {{/tools}}
            </div>
        </div>
    </div>
</div>
{{#js}}
    require(['mod_lti/tool_configure'], function(toolConfigure) {
        toolConfigure.enhancePage();
    });
{{/js}}
