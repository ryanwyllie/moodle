{{!
    @template mod_lti/tool_configure

    This template provides the layout for the external tool configuration page in the
    LTI module.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    *

    Example context (json):
    {
    }

}}
<h2>{{#str}} manage_tool_proxies, mod_lti {{/str}}</h2>
<div class="fluid-container">
    <div id="registration-form-container">
        <h3>Add new external tool</h3>
        <form id="registration-form" class="form-inline">
            <input name="tool-url"
                class="input-xxlarge"
                type="url"
                id="registration-url"
                placeholder="URL for XML cartridge or tool registration page..."
                required>
            <button id="registration-submit" type="button" class="btn btn-success">
                <span class="btn-text">Add automatically</span>
                <div class="btn-loader">
                    <div class="spinner">
                        <div class="bounce1"></div>
                        <div class="bounce2"></div>
                        <div class="bounce3"></div>
                    </div>
                </div>
            </button>
            or <a href="{{configuremanualurl}}">Add manually</a>
        </form>
    </div>

    <div>
        <h3>Configured tools</h3>
        <div id="tool-card-container" class="container-fluid">
            {{#tools}}
                <div class="tool-card">
                    <div class="tool-card-header">
                        <img src="{{iconurl}}" alt="{{name}}"></img>
                    </div>
                    <div class="tool-card-body">
                        <h4>{{name}}</h4>
                        <p>{{description}}</p>
                    </div>
                    <div class="tool-card-footer">
                        <a href="#">{{#pix}} t/edit, core, Edit{{/pix}}</a>
                        <a href="#">{{#pix}} t/delete, core, Delete{{/pix}}</a>
                    </div>
                </div>
            {{/tools}}
        </div>
    </div>
</div>
{{#js}}
    require(['mod_lti/tool_configure'], function(toolConfigure) {
        toolConfigure.enhancePage();
    });
{{/js}}
