{{!
    @template block_myoverview/timeline-view-nav-day-filter

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}
<div data-region="timeline-day-filter" class="dropdown">
    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{#pix}} i/duration {{/pix}} <span data-active-item-text class="d-sm-inline-block d-none">Next 30 days</span>
    </button>
    <div class="dropdown-menu" data-show-active-item>
        <a class="dropdown-item" href="#" data-from="-14">All</a>
        <a class="dropdown-item" href="#" data-from="-14" data-to="0">Overdue</a>
        <div class="dropdown-divider"></div>
        <h6 class="dropdown-header">Due date</h6>
        <a class="dropdown-item" href="#" data-from="0" data-to="7">Next 7 days</a>
        <a class="dropdown-item active" href="#" data-from="0" data-to="30">Next 30 days</a>
        <a class="dropdown-item" href="#" data-from="0" data-to="90">Next 3 months</a>
        <a class="dropdown-item" href="#" data-from="0" data-to="180">Next 6 months</a>
    </div>
</div>
