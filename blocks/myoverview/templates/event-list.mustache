{{!
    @template block_myoverview/event-list

    This template renders a list of events for the myoverview block.

    Example context (json):
    {
        "events": [
            {
                "actionname": "Submit assignment",
                "actionurl": "https://www.google.com",
                "enddate": "Nov 4th, 10am",
                "contextname": "Assignment due 1",
                "contexturl": "https://www.google.com",
                "coursename": "Course 1",
                "itemcount": 1,
                "icon": {
                    "id": "icon",
                    "component": "mod_assign",
                    "alttext": "Assignment icon"
                }
            },
            {
                "actionname": "Submit assignment",
                "actionurl": "https://www.google.com",
                "enddate": "Nov 4th, 10am",
                "contextname": "Assignment due 2",
                "contexturl": "https://www.google.com",
                "coursename": "Course 1",
                "itemcount": 1,
                "icon": {
                    "id": "icon",
                    "component": "mod_assign",
                    "alttext": "Assignment icon"
                }
            }
        ]
    }
}}
<div data-region="event-list-container"
     data-start-day="{{$startday}}0{{/startday}}"
     data-end-day="{{$endday}}7{{/endday}}"
     data-limit="{{$limit}}10{{/limit}}"
     data-offset="{{$offset}}0{{/offset}}">

    <h5 id="event-list-title-{{uniqid}}">
        {{$title}}{{/title}} <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    </h5>
    <ul class="list-group" data-region="event-list" aria-describedby="event-list-title-{{uniqid}}">
        {{> block_myoverview/event-list-items }}
    </ul>
</div>
