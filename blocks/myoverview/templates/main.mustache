{{!
    @template block_myoverview/main

    This template renders the main content area for the myoverview block.
}}
<div id="block-myoverview-{{uniqid}}" class="container-fluid" data-region="myoverview">
    <div class="row">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#" data-action="show-timeline">{{#str}} timeline, block_myoverview {{/str}}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-action="show-courses">{{#str}} courses {{/str}}</a>
            </li>
        </ul>
    </div>
    {{> block_myoverview/timeline-view }}
</div>
{{#js}}
require(['jquery', 'block_myoverview/main_controller'], function($, Controller) {
    var container = $('#block-myoverview-{{uniqid}}');
    new Controller(container);
});
{{/js}}
