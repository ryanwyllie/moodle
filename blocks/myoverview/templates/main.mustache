{{!
    @template block_myoverview/main

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}

<div id="block-myoverview-{{uniqid}}" class="block-myoverview" data-region="myoverview">
    <ul id="block-myoverview-view-choices-{{uniqid}}" class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link {{#viewingtimeline}}active{{/viewingtimeline}}" role="tab" data-tabname="timeline">
                {{#str}} timeline, block_myoverview {{/str}}
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{#viewingcourses}}active{{/viewingcourses}}" role="tab" data-tabname="courses">
                {{#str}} courses {{/str}}
            </a>
        </li>   
    </ul>
    <div class="tab-content content-centred">
        <div role="tabpanel" class="tab-pane fade {{#viewingtimeline}}in active{{/viewingtimeline}}">
            {{> block_myoverview/timeline-view }}
        </div>
        <div role="tabpanel" class="tab-pane fade {{#viewingcourses}}in active{{/viewingcourses}}">
            {{#coursesview}}
                {{> block_myoverview/courses-view }}
            {{/coursesview}}
        </div>
    </div>
</div>
{{#js}}
require(['block_myoverview/main'], function(BlockMyOverviewComponent) {
    var context = {{{context}}}

    new BlockMyOverviewComponent(
        document.getElementById('block-myoverview-{{uniqid}}'),
        'block_myoverview/main',
        context
    );
});
{{/js}}