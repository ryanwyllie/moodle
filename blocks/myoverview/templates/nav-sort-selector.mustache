{{!
    @template block_myoverview/nav-sort-selector

    This template renders sorting dropdown.

    Example context (json):
    {}
}}
<div class="dropdown mr-1 ml-auto">
    <button id="sortingdropdown" type="button" class="btn btn-outline-secondary dropdown-toggle" data-toggle="dropdown"  aria-haspopup="true" aria-expanded="false">
        {{#pix}} i/filter {{/pix}} <span data-active-item-text class="d-sm-inline-block d-none">{{#str}} sort, core {{/str}}</span>
    </button>
    <ul class="dropdown-menu" data-show-active-item data-skip-active-class="true" aria-labelledby="sortingdropdown">
        <li>
            <a class="dropdown-item active" href="#" data-filter="sort" data-value="fullname" aria-label="{{#str}} title:aria, block_myoverview {{/str}}">
                {{#str}} title, block_myoverview {{/str}}
            </a>
        </li>
        <li>
            <a class="dropdown-item" href="#" data-filter="sort" data-value="lastaccessed desc" aria-label="{{#str}} lastaccessed:aria, block_myoverview {{/str}}">
                {{#str}} lastaccessed, block_myoverview {{/str}}
            </a>
        </li>
    </ul>
</div>