{{!
    Question search page
}}
<div data-region="question-search-page-container-{{uniqid}}"
    {{#contextids}}data-context-ids="{{.}}"{{/contextids}}>
    <h3>Search questions</h3>
    <div data-region="search-form" class="input-group">
        <input data-region="search-input" type="text" class="form-control" placeholder="Search questions..." aria-label="Search questions">
        <div class="input-group-btn">
            <button data-action="search" class="btn btn-outline-secondary" type="button">
                <!-- {{# pix }} i/search, core, Search {{/ pix }} -->
                Search
            </button>
        </div>
    </div>
    <div data-region="search-results">

    </div>
</div>
{{#js}}
require(['jquery', 'core_question/search_page'], function($, SearchPage) {
    SearchPage.init($('[data-region="question-search-page-container-{{uniqid}}"]'));
});
{{/js}}
