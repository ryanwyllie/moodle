{{!
    @template calendar/modal_quick_add_event

    Moodle modal template with save and cancel buttons.

    The purpose of this template is to render a modal.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * title A cleaned string (use clean_text()) to display.
    * body HTML content for the boday

    Example context (json):
    {
        "title": "Example save cancel modal",
        "body": "Some example content for the body"
    }
}}

{{< core/modal }}
    {{$title}}{{#str}} quickaddevent, calendar {{/str}}{{/title}}
    {{$body}}
        <form>
            <div class="form-group">
                <label for="event-name-{{uniqid}}">Event name</label>
                <input data-event-name id="event-name-{{uniqid}}" class="form-control" type="text" placeholder="Event name">
            </div>
            <div class="form-group">
                <label for="event-date-time-{{uniqid}}">When</label>
                <p data-event-date-time>{{formattedtime}}</p>
            </div>
            <div class="form-group">
                <label for="event-type-{{uniqid}}">Type</label>
                <select data-event-type class="form-control" id="event-type-{{uniqid}}">
                    {{#allowedtypes}}
                        <option>{{.}}</option>
                    {{/allowedtypes}}
                </select>
            </div>
        </form>
    {{/body}}
    {{$footer}}
        <a class="btn btn-secondary" data-action="more" href="{{{urls.more}}}">{{#str}} more, calendar {{/str}}</a>
        <button type="button" class="btn btn-primary" data-action="save">{{#str}} save {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
