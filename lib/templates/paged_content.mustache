{{!
    @template core/paging_content

    This template renders each of the content regions for a paginated
    content section.

    Example context (json):
    {
        "pages": [
            {
                "active": true,
                "page": 1,
                "content": "<p>Some page content</p>"
            },
            {
                "page": 2,
                "content": "<p>Some page content</p>"
            }
        ]
    }
}}
<div id="paged-content-container-{{uniqid}}" data-region="paged-content-container">
    {{> core/paged_content_paging_bar }}
    {{> core/paged_content_pages }}
</div>
{{^skipjs}}
{{#js}}
require(
[
    'jquery',
    'core/paged_content_paging_bar',
    'core/paged_content_pages'
],
function(
    $,
    PagingBar,
    PagingContent
) {
    var container = $("#paged-content-container-{{uniqid}}");
    var pagingBar = container.find(PagingBar.rootSelector);
    var pagingContent = container.find(PagingContent.rootSelector);

    PagingContent.init(pagingContent, pagingBar);
});
{{/js}}
{{/skipjs}}
