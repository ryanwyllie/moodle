{{#viewstore}}
    {{#component}}
        <input
            type="text"
            value="{{title}}"
            onChange="(function(e) {this.props.context.title = e.target.value}.bind(this))"
        />
    {{/component}}
    {{#component}}
        <h2>{{title}}</h2>
    {{/component}}
    {{#component}}
        <ul>
            {{#items}}
                <li>{{.}}</li>
            {{/items}}
        </ul>
    {{/component}}
{{/viewstore}}