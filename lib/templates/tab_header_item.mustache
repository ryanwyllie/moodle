{{!
    @template core/tab_header_item

    This template is indended to only be used by the core/tab_header template.
}}
{{# tabs }}
    <li role="tab"
            data-target="{{ uniqid }}-{{ id }}"
            data-selected-class="active"
            aria-controls="{{ uniqid }}-{{ id }}"
            {{# selected }}aria-selected="true" tabindex="0" class="active"{{/ selected }}
            {{^ selected }}aria-selected="false" tabindex="-1"{{/ selected }}>

        <a href="#">{{$ tabname }}{{{ name }}}{{/ tabname }}</a>
    </li>
{{/ tabs }}
