{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div
    class="card border-0"
    data-region="{{$region}}{{/region}}"
    data-user-id="{{loggedinuser.id}}"
>
    <div id="{{$region}}{{/region}}-toggle" class="card-header p-0">
        <button
            class="btn btn-link w-100 text-left p-2 d-flex align-items-center {{^expanded}}collapsed{{/expanded}}"
            data-toggle="collapse"
            data-target="#{{$region}}{{/region}}-target"
            aria-expanded="{{#expanded}}true{{/expanded}}{{^expanded}}false{{/expanded}}"
            aria-controls="{{$region}}{{/region}}-target"
            style="text-align: left;"
        >
            <i class="fa fa-caret-right mr-1"></i> {{$title}}{{/title}} (<span data-region="section-total-count">{{count.total}}</span>)
             <span class="hidden" data-region="loading-icon-container">
                {{> core/loading }}
            </span>
            <span class="{{^count.unread}}hidden{{/count.unread}} badge badge-pill badge-primary ml-auto" data-region="section-unread-count">
                {{count.unread}}
            </span>
        </button>
    </div>
    <div
        id="{{$region}}{{/region}}-target"
        class="collapse border-bottom {{#expanded}}show{{/expanded}}"
        aria-labelledby="{{$region}}{{/region}}-toggle"
        data-parent="#message-drawer-view-overview-container"
        data-region="collapse-region"
    >
        <div class="hidden text-center p-2" data-region="empty-message-container">
            {{$emptymessage}}{{/emptymessage}}
        </div>
        <div class="hidden list-group" data-region="content-container">
            {{$content}}{{/content}}
        </div>
        <div class="list-group" data-region="placeholder-container">
            {{$placeholder}}{{/placeholder}}
        </div>
    </div>
</div>