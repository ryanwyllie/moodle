{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div
    class="hidden h-100"
    data-region="view-conversation"
    data-user-id="{{loggedinuser.id}}"
    data-full-name="{{loggedinuser.fullname}}"
    data-profile-url="{{loggedinuser.profileurl}}"
    data-midnight="{{loggedinuser.midnight}}"
    style="overflow-y: auto"
>
    <div class="position-relative h-100 box-border" data-region="content-container" style="overflow-y: auto">
        <div class="hidden h-100 px-2 pb-2 pt-0" data-region="content-message-container" style="overflow-y: auto">
            <div class="hidden text-center p-3" data-region="more-messages-loading-icon-container">{{> core/loading }}</div>
        </div>
        <div class="p-4 w-100 h-100 hidden position-absolute" data-region="confirm-dialogue-container" style="top: 0; background: rgba(0,0,0,0.3);">
            {{> message_popup/message_drawer_view_conversation_body_confirm_dialogue }}
        </div>
        <div class="px-2 pb-2 pt-0" data-region="content-placeholder">
            {{> message_popup/message_drawer_view_conversation_body_placeholder }}
        </div>
    </div>
</div>
