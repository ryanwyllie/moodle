{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}
<div class="hidden h-100" data-region="view-contacts" data-user-id="{{loggedinuser.id}}" >
    <div
        class="position-relative h-100"
        data-region="contacts-container"
        style="overflow-y: auto"
    >
        <div class="h-100">
            <div class="hidden text-center p-2" data-region="empty-message-container">
                 <p class="text-muted mt-2">{{#str}} nocontactsgetstarted, core_message {{/str}}</p>
            </div>
            <div class="hidden list-group" data-region="contacts-content-container">
                {{$content}}{{/content}}
            </div>
            <div class="list-group" data-region="placeholder-container">
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            </div>
            <div class="w-100 text-center p-3 hidden" data-region="loading-icon-container" >
                {{> core/loading }}
            </div>
        </div>
    </div>
</div>