{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}
<div class="hidden" data-region="view-contacts" data-user-id="{{loggedinuser.id}}" >
    <div class="d-flex flex-column">
        <div
            class="px-2 pb-2 pt-0 position-relative"
            data-region="view-contacts-container"
            style="overflow-y: auto"
        >
        {{< message_popup/message_drawer_view_contacts_section }}
            {{$region}}contacts-list{{/region}}
            {{$placeholder}}
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
                {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            {{/placeholder}}
            {{$emptymessage}}
                <p class="text-muted mt-2">{{#str}} nocontactsgetstarted, core_message {{/str}}</p>
            {{/emptymessage}}
        {{/ message_popup/message_drawer_view_contacts_section }}
            <div class="w-100 text-center" data-region="loading-icon-container" >
                {{> core/loading }}
            </div>
        </div>
    </div>
</div>