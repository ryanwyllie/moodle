{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div
    class="card border-0"
    data-region="view-overview-contacts"
    data-user-id="{{loggedinuserid}}"
>
    <div id="view-overview-contacts" class="card-header p-1">
        <button
            class="btn btn-link"
            data-toggle="collapse"
            data-target="#view-overview-contacts-target"
            aria-expanded="false"
            aria-controls="view-overview-contacts-target"
        >
            <i class="fa fa-caret-right mr-1"></i> {{#str}} contacts, core_message {{/str}}
        </button>
        <span class="hidden" data-region="loading-icon-container">
            {{> core/loading }}
        </span>
    </div>
    <div
        id="view-overview-contacts-target"
        class="collapse border-bottom"
        aria-labelledby="view-overview-contacts"
        data-region="view-overview-contacts-content"
    >
    </div>
</div>