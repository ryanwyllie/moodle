{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

{{#contacts}}
    <a
        href="#"
        class="p-2 d-flex list-group-item list-group-item-action border-0"
        data-route="view-contact"
        data-route-param="{{userid}}"
    >
        <img
            class="rounded-circle"
            src="{{{profileimageurl}}}"
            alt="{{fullname}}"
            aria-hidden="true"
            style="height: 40px"
        >
        <h6 class="ml-2">{{fullname}}</h6>
        {{#isblocked}}
            <div class="ml-auto align-self-end">
                {{#pix}} t/block, core, {{#str}} contactblocked, message {{/str}} {{/pix}}
            </div>
        {{/isblocked}}
    </a>
{{/contacts}}