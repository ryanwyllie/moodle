{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div
    class="hidden"
    data-region="view-contact"
    data-user-id="{{loggedinuser.id}}"
>
    <div class="p-2 pt-3">
        <a class="align-self-center" href="#" data-route-back>
            {{> message_popup/message_drawer_icon_back }}
        </a>
    </div>
    <div class="px-3 pb-3" data-region="loading-placeholder-container">
        <div class="bg-pulse-grey mx-auto rounded-circle" style="height: 100px; width: 100px"></div>
        <div class="bg-pulse-grey mx-auto mt-2 w-75" style="height: 36px;"></div>
        <div class="px-4 mt-4">
            <div class="bg-pulse-grey my-2" style="height: 36px"></div>
            <div class="bg-pulse-grey my-2" style="height: 36px"></div>
            <div class="bg-pulse-grey my-2" style="height: 36px"></div>
        </div>
    </div>
    <div class="px-3 pb-3" data-region="content-container"></div>
</div>