{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

{{#hasresults}}
    <div class="mb-3 bg-white p-2">
        <div class="{{^hascontacts}}hidden{{/hascontacts}}" data-region="contacts-container">
            <h4 class="h6">{{#str}} contacts, core_message {{/str}}</h4>
            <div class="list-group" data-region="list">
                {{> message_popup/message_drawer_contacts_list }}
            </div>
        </div>
        <div class="{{^hasnoncontacts}}hidden{{/hasnoncontacts}}" data-region="non-contacts-container">
            <h4 class="h6">{{#str}} noncontacts, core_message {{/str}}</h4>
            <div class="list-group" data-region="list">
                {{> message_popup/message_drawer_non_contacts_list }}
            </div>
        </div>
        {{#loadmoreusers}}
            <div class="text-right">
                <button class="btn btn-link" data-action="loadmorecontacts">
                    {{#str}}loadmore, core_message{{/str}}
                </button>
            </div>
        {{/loadmoreusers}}
    </div>
    <div class="mb-3 bg-white p-2">
        <div class="{{^hasmessages}}hidden{{/hasmessages}}" data-region="messages-container">
            <h4 class="h6">{{#str}} messages, core_message {{/str}}</h4>
            <div class="list-group" data-region="list">
                {{> message_popup/message_drawer_messages_list }}
            </div>
        </div>
        {{#loadmoremessages}}
            <div class="text-right">
                <button class="btn btn-link" data-action="loadmoreusers">
                    {{#str}}loadmore, core_message{{/str}}
                </button>
            </div>
        {{/loadmoremessages}}
    </div>
{{/hasresults}}
{{^hasresults}}
    <p>{{#str}} noresults, core {{/str}}</p>
{{/hasresults}}