{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div class="d-flex flex-column position-absolute" style="top: 0; left: 0; right: 0; bottom: 0;">
    <div class="mb-3 bg-white p-2" style="max-height: 50%; overflow-y: auto;">
        <div data-region="contacts-container">
            <h4 class="h6">{{#str}} contacts, core_message {{/str}}</h4>
            <div class="list-group" data-region="list"></div>
        </div>
        <div data-region="non-contacts-container">
            <h4 class="h6">{{#str}} noncontacts, core_message {{/str}}</h4>
            <div class="list-group" data-region="list"></div>
        </div>
        <div class="text-right">
            <button class="btn btn-link" data-action="load-more-users">
                {{#str}}loadmore, core_message{{/str}}
            </button>
        </div>
    </div>
    <div class="bg-white p-2" style="flex: 1; overflow-y: auto">
        <div data-region="messages-container">
            <h4 class="h6">{{#str}} messages, core_message {{/str}}</h4>
            <div class="list-group" data-region="list"></div>
        </div>
        <div class="text-right">
            <button class="btn btn-link" data-action="load-more-messages">
                {{#str}}loadmore, core_message{{/str}}
            </button>
        </div>
    </div>
</div>