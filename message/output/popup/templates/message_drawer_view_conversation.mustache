{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div
    class="hidden h-100"
    data-region="view-conversation"
    data-user-id="{{loggedinuser.id}}"
    data-full-name="{{loggedinuser.fullname}}"
    data-profile-url="{{loggedinuser.profileurl}}"
    data-midnight="{{loggedinuser.midnight}}"
>
    <div class="h-100 d-flex flex-column">
        <div class="hidden" data-region="view-conversation-header"></div>
        <div class="hidden" data-region="content-container" style="flex: 1; overflow-y: auto">
            <div class="h-100 d-flex flex-column">
                <div
                    class="px-2 pb-2 pt-0 position-relative"
                    data-region="view-conversation-messages"
                    style="overflow-y: auto"
                >
                    <div class="hidden text-center p-3" data-region="more-messages-loading-icon-container">{{> core/loading }}</div>
                </div>

                <div class="mt-auto w-100 p-2 border-top bg-white" data-region="response">
                    <div class="d-flex">
                        <textarea
                            data-region="send-message-txt"
                            class="form-control bg-light"
                            rows="1"
                            data-auto-rows
                            data-min-rows="1"
                            data-max-rows="5"
                            role="textbox"
                            aria-label="{{#str}} writeamessage, core_message {{/str}}"
                            placeholder="{{#str}} writeamessage, core_message {{/str}}"
                            style="resize: none"
                        ></textarea>
                        <button class="btn btn-link" data-action="send-message">
                            <span data-region="send-icon-container"><i class="fa fa-paper-plane" aria-hidden="true"></i></span>
                            <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
                            <span class="sr-only">{{#str}}send, core_message{{/str}}</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div data-region="header-placeholder">
            {{> message_popup/message_drawer_view_conversation_header_placeholder }}
        </div>
        <div data-region="content-placeholder" style="flex: 1; overflow-y: auto">
            {{> message_popup/message_drawer_view_conversation_content_placeholder }}
        </div>
    </div>


</div>