{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div
    class="hidden h-100"
    data-region="view-conversation"
    data-user-id="{{loggedinuser.id}}"
    data-full-name="{{loggedinuser.fullname}}"
    data-profile-url="{{loggedinuser.profileurl}}"
    data-midnight="{{loggedinuser.midnight}}"
>
    <div class="h-100 d-flex flex-column">
        <div class="border-bottom bg-white p-2" data-region="header-container">
            <div class="hidden" data-region="header-content"></div>
            <div class="hidden" data-region="header-edit-mode">
                {{> message_popup/message_drawer_view_conversation_header_edit_mode }}
            </div>
            <div data-region="header-placeholder">
                {{> message_popup/message_drawer_view_conversation_header_placeholder }}
            </div>
        </div>
        <div class="position-relative" data-region="content-container" style="flex: 1; overflow-y: auto">
            <div class="hidden h-100" data-region="content-message-container">
                {{> message_popup/message_drawer_view_conversation_content_messages }}
            </div>
            <div class="p-4 w-100 h-100 hidden position-absolute" data-region="confirm-dialogue-container" style="top: 0; background: rgba(0,0,0,0.3);">
                {{> message_popup/message_drawer_view_conversation_confirm_dialogue }}
            </div>
            <div class="h-100" data-region="content-placeholder">
                {{> message_popup/message_drawer_view_conversation_content_placeholder }}
            </div>
        </div>
    </div>
</div>