{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

{{#contacts}}
    <a
        href="#"
        class="p-2 d-flex"
        data-route="view-conversation"
        data-route-param="{{userid}}"
    >
        <img
            class="rounded-circle"
            src="{{{profileimageurl}}}"
            alt="{{fullname}}"
            aria-hidden="true"
            style="height: 40px"
        >
        <div class="w-100 text-truncate ml-2">
            <h6 class="m-0">{{fullname}}</h6>
            <p class="m-0">
                {{#sentfromcurrentuser}}{{#str}} you, core_message {{/str}}{{/sentfromcurrentuser}}
                <span class="text-muted">{{lastmessage}}</span>
            </p>
        </div>
    </a>
{{/contacts}}