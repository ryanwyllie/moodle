{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}
<div
    class="hidden h-100"
    data-region="view-contacts"
    data-user-id="{{loggedinuser.id}}"
>
    <div class="border-bottom d-flex align-items-center px-2 py-3">
        <div class="align-self-stretch">
            <a class="h-100 d-flex align-items-center mr-2" href="#" data-route-back>
                {{> message_popup/message_drawer_icon_back }}
            </a>
        </div>
        <div>
            {{#str}} contacts, core_message {{/str}}
        </div>
        <div class="ml-auto">
            <a href="#" data-route="view-search">
                {{#pix}} a/search, core {{/pix}}
            </a>
        </div>
    </div>

    {{< message_popup/message_drawer_view_contacts_section }}
        {{$region}}contacts-list{{/region}}
        {{$placeholder}}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
        {{/placeholder}}
        {{$emptymessage}}
            <p class="text-muted mt-2">{{#str}} nocontactsgetstarted, core_message {{/str}}</p>
        {{/emptymessage}}
    {{/ message_popup/message_drawer_view_contacts_section }}
</div>