{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}
<div
    class="hidden h-100"
    data-region="view-contacts"
    data-user-id="{{loggedinuser.id}}"
>
    <div class="border-bottom d-flex p-3">
        <div class="align-self-center" >
            <a href="#" data-route-back>
                <!-- TODO: FIX THIS ICON -->
                {{#pix}} e/right_to_left, core {{/pix}}
            </a>
        </div>
        <div class="align-self-center">
            {{#str}} contacts, core_message {{/str}}
        </div>
    </div>

    <div class="border-bottom text-center p2">
        <div class="btn-group mt-3 mb-3 " role="toolbar" data-region="contact-views">
            <button type="button" class="btn btn-secondary active" data-button-action="view-contacts">{{#str}} contacts, core_message {{/str}}</button>
            <button type="button" class="btn btn-secondary" data-button-action="view-requests">{{#str}} requests, core {{/str}}</button>
        </div>
    </div>

    {{< message_popup/message_drawer_view_contacts_section }}
        {{$region}}view-contacts{{/region}}
        {{$placeholder}}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
            {{> message_popup/message_drawer_contacts_list_item_placeholder }}
        {{/placeholder}}
        {{$emptymessage}}
            <p class="text-muted mt-2">{{#str}} nocontacts, core_message {{/str}}</p>
        {{/emptymessage}}
    {{/ message_popup/message_drawer_view_contacts_section }}
</div>