{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div class="h-100 hidden bg-white" data-region="view-settings">
    <div class="bg-light border-bottom d-flex align-items-center px-2 py-3">
        <div class="align-self-stretch" >
            <a class="h-100 d-flex mr-2 align-items-center" href="#" data-route-back>
                {{> message_popup/message_drawer_icon_back }}
            </a>
        </div>
        <div>
            {{#str}} settings, core {{/str}}
        </div>
    </div>

    <div data-region="settings" class="p-3 hidden">
        <div
            data-region="preference-control"
            data-preference="blocknoncontacts"
            class="mb-3"
        >
            <span class="switch">
                <input type="checkbox"
                    class="switch"
                    id="block-noncontacts-{{uniqid}}"
                >
                <label class="line-height-3" for="block-noncontacts-{{uniqid}}">
                    {{#str}} blocknoncontacts, message {{/str}}
                </label>
            </span>
        </div>

        <div
            data-region="preference-control"
            data-preference="emailnotifications"
        >
            <span class="switch">
                <input type="checkbox"
                    class="custom-control-input"
                    id="email-alerts-{{uniqid}}"
                >
                <label for="email-alerts-{{uniqid}}">
                    {{#str}} emailalert, hub {{/str}}
                </label>
            </span>
        </div>
    </div>
    <div data-region="loading-placeholder" class="p-3">
        <div class="mb-3 d-flex">
            <div class="bg-pulse-grey mr-2" style="height: 27px; width: 65px"></div>
            <div class="bg-pulse-grey mr-2 w-100" style="height: 27px;"></div>
        </div>
        <div class="mb-3 d-flex">
            <div class="bg-pulse-grey mr-2" style="height: 27px; width: 65px"></div>
            <div class="bg-pulse-grey mr-2 w-100" style="height: 27px;"></div>
        </div>
    </div>
</div>