{{!
    @template message_output_popup/message_drawer

    This template will render the message drawer.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

{{#messages}}
    <a
        href="#"
        class="p-2 d-flex list-group-item list-group-item-action border-0"
        data-route="view-conversation"
        data-route-param="{{userid}}"
    >
        <img
            class="rounded-circle"
            src="{{{profileimageurl}}}"
            alt="{{fullname}}"
            aria-hidden="true"
            style="height: 40px"
        >
        <div class="w-100 text-truncate ml-2">
            <strong class="m-0">{{fullname}}</strong>
            <p class="m-0 font-weight-light text-truncate">
                {{#sentfromcurrentuser}}{{#str}} you, core_message {{/str}}{{/sentfromcurrentuser}}
                {{lastmessage}}
            </p>
        </div>
        {{#unreadcount}}
        <div class="align-self-center">
            <span class="badge badge-pill badge-primary">{{.}}</span>
        </div>
        {{/unreadcount}}
        <div class="align-self-center text-muted">
            <!-- TODO: FIX THIS ICON -->
            {{#pix}} e/left_to_right, core {{/pix}}
        </div>
    </a>
{{/messages}}