{{#editbutton}}
<a href="{{{url}}}" class="btn btn-primary mr-2" data-action="save-course">
    <span class="hidden" data-region="loading-icon-container">{{> core/loading }}</span>
    <span data-region="text-container">
        <span class="icon-no-margin mr-1">
            {{#pix}} {{icon.key}}, {{icon.component}}, {{text}} {{/pix}}
        </span>
        {{text}}
    </span>
</a>
{{/editbutton}}

<div class="float-right mr-2">
    {{#settingsmenu}}
        {{> core/action_menu }}
    {{/settingsmenu}}
</div>
