{{!
    @template tool_dataprivacy/data_registry_compliance

    Data registry main page.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "types" : {
            "plugin_type_raw" : "mod",
            "plugin_type" : "Activities and Modules"
        },
        "count" : 5
    }
}}
<div id="data-privacy-main-{{uniqid}}" class="dataprivacy-main">
    <h2>{{#str}}pluginregistrytitle, tool_dataprivacy{{/str}}</h2>
    <hr />
    {{#count}}
        <div class="alert alert-warning alert-block fade in">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{#pix}}i/risk_xss, moodle, {{#str}}requiresattention, tool_dataprivacy{{/str}}{{/pix}}
            {{#str}}requiresattentionareas, tool_dataprivacy, {{count}}{{/str}}
            <button class="tool_dataprivacy-filter" data-display="show" data-type="api-issue">{{#str}}filterresults, tool_dataprivacy{{/str}}</button>
        </div>
    {{/count}}
    <p><strong>{{#str}}explanationtitle, tool_dataprivacy{{/str}}</strong></p>
    <dl>
        <dt>{{#pix}}i/risk_xss, moodle, {{#str}}requiresattention, tool_dataprivacy{{/str}}{{/pix}}</dt>
        <dd>{{#str}}requiresattentionexplanation, tool_dataprivacy{{/str}}</dd>
        <dt><span class="badge badge-pill badge-notice">{{#str}}external, tool_dataprivacy{{/str}}</span></dt>
        <dd>{{#str}}externalexplanation, tool_dataprivacy{{/str}}</dd>
    </dl>
    <hr />
    <!-- Search and filtering area -->
    <div class="tool_dataprivacy-search-area">
        <form class="form-inline">
            <input type="text" class="form-control mr-2 tool_dataprivacy-search-box" placeholder="{{#str}}searchplaceholder, tool_dataprivacy{{/str}}" />
            <div class="form-check form-check-inline">
                <input id="checkbox-1-{{uniqid}}" class="form-check-input tool_dataprivacy-filter" type="checkbox" name="additional" data-type="additional" data-display="show">
                <label class="form-check-label" for="checkbox-1-{{uniqid}}">{{#str}}external, tool_dataprivacy{{/str}}</label>
            </div>
            <div class="form-check form-check-inline">
                <input id="checkbox-2-{{uniqid}}" class="form-check-input tool_dataprivacy-filter" type="checkbox" name="api-issue" data-type="api-issue" data-display="show">
                <label class="form-check-label" for="checkbox-2-{{uniqid}}">{{#str}}requiresattention, tool_dataprivacy{{/str}}</label>
            </div>
        </form>
    </div>
    <br />
    <br />
    <div class="clearfix"><a class="tool_dataprivacy-expand-all pull-right" href="#" data-visibility-state='visible'>{{#str}}hide, tool_dataprivacy{{/str}}</a></div>
    {{#types}}
    <div>
        <div class="type expand" data-plugin="{{plugin_type_raw}}">
            <a  href='#'>
            <h3 id="{{plugin_type_raw}}">
                <span class="collapsed-icon">{{#pix}}t/collapsed, moodle, {{#str}}expandplugintype, tool_dataprivacy{{/str}}{{/pix}}</span>
                <span class="expanded-icon">{{#pix}}t/expanded, moodle, {{#str}}expandplugintype, tool_dataprivacy{{/str}}{{/pix}}</span>
                {{plugin_type}}
            </h3>
            </a>
        </div>
        <div class="tool_dataprivacy-element hide p-b-1" data-plugintarget="{{plugin_type_raw}}" aria-expanded="false" role="contentinfo">
            {{#plugins}}
                {{> tool_dataprivacy/component_status}}
            {{/plugins}}
        </div>
    </div>
    {{/types}}
    <div class="tool_dataprivacy-component-count hide">
        <p>{{#str}}allcomponentsgood, tool_dataprivacy{{/str}}</p>
    </div>
</div>
{{#js}}
require(['jquery', 'tool_dataprivacy/expand_contract'], function($, ec) {
    //var root = $('#data-privacy-main-{{uniqid}}');
    //ec.init(root, {{{rawdata}}});

    var rawData = {{{rawdata}}};
    var items = []
    for (var key in rawData) {
        items.push(rawData[key]);
    }

    var searchRoot = $('.tool_dataprivacy-search-area');
    $('.tool_dataprivacy-search-box').keyup(function() {
        //ec.search();
        var filterFunction = ec.buildFilterFunction(searchRoot);
        var filteredList = ec.filterList(filterFunction, items);
        var objects = {};
        for (var i = 0; i < filteredList.length; i++) {
            var item = filteredList[i];
            objects[item.plugin_type_raw] = item;
        }
        ec.updatedisplay(rawData, objects);
    });

});
{{/js}}
