{{!
    @template local_notification/menu

    Starting point for an awesome template.
}}
<div class="local-notification-menu">
    <ul class="nav">
        <li class="dropdown">
            <a href="#" data-toggle="dropdown">
                <div id="notification-icon-container">
                    <div class="spinner">
                        <div class="double-bounce1"></div>
                        <div class="double-bounce2"></div>
                    </div>
                    <div id="notification-count" class="circle">

                    </div>
                </div>
            </a>
            <div id="notification-menu" class="dropdown-menu pull-right">
                <div class="header">
                    <h3>Notifications</h3>
                </div>
                <ul id="notification-list" class="scroll-y">
                    <li id="notification-loader" class="loading">
                        <div class="spinner">
                            <div class="bounce1"></div>
                            <div class="bounce2"></div>
                            <div class="bounce3"></div>
                        </div>
                    </li>
                </ul>
            </div>
        </li>
    </ul>
</div>
{{# js }}
    require(['jquery', 'local_notification/notification'], function($, notification) {
        var iconContainer = $('#notification-icon-container');
        var list = $('#notification-list');
        notification.init(list, iconContainer);
    });
{{/ js }}
