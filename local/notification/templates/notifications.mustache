{{!
    @template local_notification/index_page

    Starting point for an awesome template.

}}
<table id="notification-list" class="table table-hover"> 
    <thead> 
        <tr> 
            <th>ID</th> 
            <th>Type</th> 
            <th>Description</th> 
            <th>Created</th> 
        </tr> 
    </thead> 
    {{#notifications}} 
    <tr class="notification clickable {{^seen}}unseen{{/seen}}" data-notification-id="{{id}}">
        <td>{{id}}</td>
        <td>{{type}}</td>
        <td>{{description}}</td>
        <td>{{created_date}}</td>
    </tr>
    {{/notifications}} 
</table>

